<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/competitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dip"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/result"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeActionLabel="Done"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="16sp"
        android:selectAllOnFocus="true" />

    <Spinner
        android:id="@+id/result_code_spinner"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/result"
        android:layout_toRightOf="@+id/enter_code"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:gravity="right"
        android:paddingRight="-10px"
        android:prompt="@string/result_prompt"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/enter_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/result_code_spinner"
        android:layout_toRightOf="@+id/competitor"
        android:paddingRight="10dip"
        android:text="@string/enter_code"
        android:textColor="#000000"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/rdg_pos"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/result_code_spinner"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeActionLabel="Done"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/rdg_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdg_pos"
        android:layout_toLeftOf="@+id/rdg_pos"
        android:gravity="right"
        android:paddingRight="10dip"
        android:text="@string/rdg_pos"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/enter_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/result"
        android:layout_toLeftOf="@+id/result"
        android:paddingRight="10dip"
        android:text="@string/enter_pos"
        android:textColor="#000000"
        android:textSize="12sp" />
    
</RelativeLayout>
 