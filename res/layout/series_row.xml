<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     <TextView android:id="@+id/series_name"
         android:textSize="16sp"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
    	 android:textColor="#000000"
         android:paddingRight="10dip"/>
     <TextView android:id="@+id/num_races_line"
         android:textSize="16sp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/series_name"
         android:text="@string/num_races_line"
         android:layout_gravity="left"
    	 android:textColor="#000000"
         android:paddingRight="10dip"/>
     <TextView android:id="@+id/num_races"
         android:textSize="16sp"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/num_races_line"
         android:layout_below="@id/series_name"
    	 android:textColor="#000000"
         android:layout_gravity="left"/>
</RelativeLayout>
 