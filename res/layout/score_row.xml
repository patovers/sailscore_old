<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">

     <TextView 
     	android:id="@+id/position"
     	android:textSize="20sp"
     	android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:textColor="#000000"
        android:paddingRight="10dip"/>

     <TextView
     	android:id="@+id/boatclass"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/position"
    	android:textColor="#000000"
        android:paddingRight="20dip"/>

     <TextView android:id="@+id/sailno"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/boatclass"
    	android:textColor="#000000"
        android:layout_gravity="right"/>

     <TextView android:id="@+id/helm"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boatclass"
        android:layout_toRightOf="@id/position"
    	android:textColor="#000000"
        android:paddingRight="20dip"/>

     <TextView android:id="@+id/crew"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boatclass"
    	android:textColor="#000000"
        android:layout_toRightOf="@id/helm"/>

     <TextView android:id="@+id/club"
        android:textSize="12sp"
        android:textStyle=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helm"
        android:layout_toRightOf="@id/position"
    	android:textColor="#000000"
        android:paddingRight="20dip"/>
        
      <TextView android:id="@+id/net_pts"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
    	android:textColor="#000000"
        android:paddingRight="20dip"/>

     <TextView android:id="@+id/gross_pts"
        android:textSize="16sp"
        android:textStyle=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/net_pts"
        android:gravity="right"
    	android:textColor="#000000"
        android:paddingRight="50dip"/>
     
     <TextView android:id="@+id/race_results"
        android:textSize="12sp"
        android:textStyle=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_toRightOf="@id/position"
        android:layout_below="@id/club"
    	android:textColor="#000000"
        android:paddingRight="50dip"/>
     
 </RelativeLayout>
 